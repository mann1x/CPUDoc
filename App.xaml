<Application x:Class="CPUDoc.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CPUDoc"
             xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
             ShutdownMode="OnExplicitShutdown"
             Exit="Application_Exit">
    <Application.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type local:RebootAppViewModel}">
                <TextBox Margin="{adonisUi:Space}" Text="{Binding GiveReason}" />
            </DataTemplate>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AdonisUI;component/ColorSchemes/Dark.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/AdonisUI.ClassicTheme;component/Resources.xaml"/>
                <ResourceDictionary Source="./Windows/NotifyIcon/NotifyIconResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
